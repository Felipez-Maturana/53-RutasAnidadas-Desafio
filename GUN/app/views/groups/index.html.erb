<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %> | </td>
        <td><%= link_to 'Show', group %> |</td> 
        <td><%= link_to 'Edit', edit_group_path(group) %> |</td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class: :'btn btn-danger' %> |</td>
        <td><%= link_to 'Ver Usuarios', group_users_path(group) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path, class: :'btn btn-info' %>
